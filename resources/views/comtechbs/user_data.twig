{% extends "/comtechbs/user_home.twig" %}

{% block data %}             

    <div class="album py-2 bg-light" style="background-image: url({{ base_url() }}/img/bgs/bg-square-2.png); background-repeat: no-repeat; background-position: 5% 5%; background-size: cover">
        <div class="container">
            <!-- Breadcrump -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb"  style="background-color: #f5f5f5; letter-spacing:4px;">
                    <li class="breadcrumb-item"><a href="{{ base_url() }}/index/{{ locale }}"><i class="fa fa-2x fa-home"></i></a></li>
                    <li class="breadcrumb-item active"> 
                        {% if locale is same as('gr') %}
                            {{ cat_title[0][0][0] }}
                        {% elseif locale is same as('en') %}
                            {{ cat_title[0][1][0] }}
                        {% endif %}
                    </li>
                </ol>
                <p class="float-right">
                    <a href="{{ base_url() }}/index/{{ locale }}" title="{{ messages['messages']['Πίσω'] }}"><i class="fa fa-arrow-circle-left text-success" style="font-size: 3.5em;"></i></a>
                </p>
            </nav>            
            <!-- End breadcrump -->

            <div class="navbar mb-1 rounded">
                <div class="container d-flex justify-content-center">
                    <ul class="nav w-100 justify-content-center">
                        <li class="nav-item">
                          {% if locale is same as('gr') %}  
                          <button type="button" class="btn btn-outline-success btn-block" disabled style="letter-spacing:4px;">{{ cat_title[0][0][0]  }}</button>
                          {% elseif locale is same as('en') %}
                          <button type="button" class="btn btn-outline-success btn-block" disabled style="letter-spacing:4px;">{{ cat_title[0][1][0]  }}</button>    
                          {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
    
                <div class="row">                        
                {% if subcats is not empty%}
                  {# set subcat_len = subcats|length %}
                   {% for i in 0..subcat_len - 1 #}
                  
                   {% for i in 0..size - 1 %}
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm border-info">
                      {% if subcats[i].subcategory_foto is empty %}
                        {% set img_path = '' %}
                       {% else %}
                            {% set img_path = '../../../img/subcategory/' %}
                        {% endif %}
                        {% if locale is same as('gr') %}
                            <a href="{{ base_url() }}/index/{{ locale }}/subcategory/{{ subcats[i].subcategory_slug }}">
                                <img class="rounded card-img-top bg-transparent" src="{{ img_path }}{{ subcats[i].subcategory_foto }}" width="100%" height="200px" title="{{ subcat_title[i][0][0] }}"/></a>
                            <div class="card-footer text-center">
                                <span style="letter-spacing:4px;"><em>{{ subcat_title[i][0][0] }}</em></span>
                            </div>
                                {% elseif locale is same as('en') %}
                                <a href="{{ base_url() }}/index/{{ locale }}/subcategory/{{ subcats[i].subcategory_slug }}">
                                <img class="rounded card-img-top bg-transparent" src="{{ img_path }}{{ subcats[i].subcategory_foto }}" width="100%" height="200px" title="{{ subcat_title[i][1][0] }}"/></a>
                            <div class="card-footer text-center">
                                <span style="letter-spacing:4px;"><em>{{ subcat_title[i][1][0] }}</em></span>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                    {% endfor %}  
                {% else %}
                    <main role="main" class="col-md-9 ml-sm-auto col-lg-12 px-4 mt-3">
                        <div class="text-center pt-3 pb-2 mb-3 border-bottom">
                            <p>{{ messages['messages']['Δεν υπάρχουν καταχωρημένες υποκατηγορίες!'] }}</p>
                        </div>
                    </main>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}